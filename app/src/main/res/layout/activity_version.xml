<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kr.hs.emirim.parksodam.breadclock.set.VersionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#ff8c00"
            android:minHeight="48dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/back" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/breadclock" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </LinearLayout>
        <ImageView
        android:id="@+id/imageView4"
        android:layout_width="148dp"
        android:layout_height="206dp"
        app:srcCompat="@drawable/breadclock_icon"
        tools:layout_editor_absoluteY="53dp"
        tools:layout_editor_absoluteX="46dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignLeft="@+id/button11"
            android:layout_alignStart="@+id/button11"
            android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:text="현재버전 v6.7.3"
        android:gravity="center"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="179dp"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/textView8"
        android:layout_alignRight="@+id/button12"
        android:layout_alignEnd="@+id/button12" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:text="최신버전 v6.7.3"
        android:gravity="center"

        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="96dp"
        android:layout_marginBottom="44dp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />
    <FrameLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="308dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/frameLayout">

    </FrameLayout>

    <Button
        android:id="@+id/button12"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="현재 최신 버전입니다."
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="46dp"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button11"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="업데이트"
        android:gravity="center"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="292dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        android:layout_marginTop="32dp" />

</RelativeLayout>
