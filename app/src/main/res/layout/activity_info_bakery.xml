<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Bakery"
    android:weightSum="1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:minHeight="48dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:weightSum="1"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="12dp"
                    app:srcCompat="@drawable/setback" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="17dp"
                    android:text="상세정보"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp" />

        </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#BDBDBD" />

    <TextView
        android:id="@+id/bakery_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Bakery Name"
        android:textSize="13sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_bimg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bakeryimg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/call"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/info_call" />

        <TextView
            android:id="@+id/bakery_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Bakery tel..."
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/add"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/info_add" />

        <TextView
            android:id="@+id/bakery_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Bakery add..."
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/time"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/info_time" />

        <TextView
            android:id="@+id/bakery_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Bakery time..."
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/info"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/info_homepage" />

        <TextView
            android:id="@+id/bakery_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Bakery info..."
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="0.5dp"
        android:background="#BDBDBD" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/bread"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/breadimg" />

        <ImageView
            android:id="@+id/bread2"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/breadimg2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/bread3"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            app:srcCompat="@mipmap/breadimg3" />

        <ImageView
            android:id="@+id/bread4"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/breadimg4" />

    </LinearLayout>

</LinearLayout>


